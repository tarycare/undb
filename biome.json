{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"indentStyle": "space",
			"semicolons": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "space"
		}
	}
}
